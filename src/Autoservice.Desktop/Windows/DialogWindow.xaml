<Window x:Class="Autoservice.Desktop.Windows.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autoservice.Desktop.Windows"
        mc:Ignorable="d"
        Title="Подтверждение" Height="170" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Совершить действие?" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"/>
        <WrapPanel Grid.Row="1" 
                   HorizontalAlignment="Right" 
                   Margin="0,0,0,0" 
                   VerticalAlignment="Bottom">
            <Button IsDefault="True" 
                    Click="Accept_Click" 
                    MinWidth="60" 
                    Margin="0,0,10,0">Да</Button>
            <Button IsCancel="True" 
                    MinWidth="60">Нет</Button>
        </WrapPanel>
    </Grid>
</Window>
